set show-all-if-ambiguous on
set completion-ignore-case on

[ -f /etc/DIR_COLORS ] && eval $(dircolors -b /etc/DIR_COLORS)
export ZLSCOLORS="${LS_COLORS}"
export SHELL='/bin/zsh'
export SSH_ASKPASS=/usr/bin/ksshaskpass
# Locale Setup
xsource "/etc/default/locale"
if [[ LC_ALL = "" ]]; then
    export LC_ALL="$LANG"
fi
xsource "/etc/sysconfig/keyboard"
TZ=$(xcat /etc/timezone)
# support colors in less
export LESS_TERMCAP_mb=$'\E[01;31m'
export LESS_TERMCAP_md=$'\E[01;31m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;44;33m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;32m'

# History fomatting
export HISTTIMEFORMAT='%F %T '
export HISTCONTROL=erasedups
#Never log these
export HISTIGNORE="&:l:ls:ll:la:lsa:tyls:pwd:exit:clear:ps:psa"
# How many lines of growth before rotating .zsh_history
export ROTATEHIST=10000
# How many .zsh_history file rotations to keep
export MAXHISTFILES=20

MAKEOPTS="-j$((NJOBS+1)) -l${NJOBS}"
EMERGE_DEFAULT_OPTS="--jobs=${NJOBS} --load-average=${NJOBS}"
